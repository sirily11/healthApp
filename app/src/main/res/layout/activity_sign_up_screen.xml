<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qiweili.healthapp.SignUpScreen">

    <EditText
        android:id="@+id/signin_username"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:hint="User name"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/signin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:layout_below="@+id/signin_username"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/signin_showusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signin_username"
        android:layout_alignStart="@+id/signin_username"
        android:layout_marginBottom="40dp"
        android:text="User name" />



</RelativeLayout>
