<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/drawer_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/drawerlayout_background" />

        <ImageView
            android:id="@+id/drawer_account_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_user" />


        <TextView
            android:id="@+id/drawer_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/drawer_bg"
            android:layout_centerHorizontal="true"
            android:text="User's id here"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="normal"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDy="3"
            android:shadowDx="1"
            android:shadowRadius="1.5"
            android:elevation="2dp"

            />

        <TextView
            android:id="@+id/drawer_user_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_above="@+id/drawer_user_id"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:text="Lastname Firstname"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:typeface="normal" />


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>